@require 'partials/*';

.pokemon-nickname
  align-items: center;
  border: 1px solid near-white;
  border-radius: 4px;
  display: inline-flex;
  height: 12.5rem;
  justify-content: space-between;
  padding: .5rem;
  margin: .25rem;
  transition: 300ms all;
  width: 30rem;
  vertical-align: top;
  &:hover
    border: 1px solid grey;
    transition: 300ms all;

.data-component
  align-self: center;
  flex: 1;

.vote-data
  border-right: 1px solid near-white;
  flex: 0.4;
  font-size: 1.1rem;
  margin: 0 .5rem;
  text-align: center;

.upvotes, .downvotes
  color: grey;
  font-size: .9rem;

.upvote-arrow, .downvote-arrow
  font-size: 1.4rem;
  padding: .25rem 0;
  &:hover
    color: theme-color;
    cursor: pointer;

.favorites-wrapper
  font-size: 1.2rem;

.votes-total, .favorite-trigger
  display: inline-block;

.votes-total
  font-size: 1rem;
  margin-right: .5rem;

.favorite-trigger
  margin-left: .5rem;
  &[data-favorite='true']
    color: gold;
  &:hover
    color: gold;
    cursor: pointer;


.pokemon-data
  align-items: center;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  margin: .25rem;

.pokemon-data-header
  text-align: center;

.pokemon-image-container
  align-items: center;
  display: flex;
  height: 120px;
  justify-content: center;
  flex: 1;
  width: 120px;

.pokemon-image-container img
  margin: 0 auto;


.nickname-data
  align-self: flex-start;
  flex: 1.5;
  padding: .5rem;

.nickname-tags
  font-size: .9rem;
  a
    color: grey;
    padding: 0 .25rem;
