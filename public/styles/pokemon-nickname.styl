@require 'partials/*';

.pokemon-nickname
  align-items: center;
  border: 1px solid near-white;
  border-radius: 4px;
  display: inline-flex;
  height: 9rem;
  font-size: .9rem;
  justify-content: space-between;
  padding: .5rem;
  margin: .25rem;
  overflow: hidden;
  transition: 300ms all;
  width: 32%;;
  vertical-align: top;
  &:hover
    border: 1px solid grey;
    transition: 300ms all;
  @media screen and (max-width: 1280px)
    height: 9.5rem;
  @media screen and (max-width: 1180px)
    height: 12rem;
  @media screen and (max-width: 960px)
    height: 9rem;
    width: 48%;
  @media screen and (max-width: 900px)
    height: 11rem;
  @media screen and (max-width: 600px)
    width: calc(100% - .5rem);

.data-component
  align-self: center;
  flex: 1;

.vote-data
  border-right: 1px solid near-white;
  flex: 0.4;
  font-size: 1rem;
  margin: 0 .5rem;
  text-align: center;

.upvotes, .downvotes
  color: grey;
  font-size: .9rem;

.upvote-arrow, .downvote-arrow
  font-size: 1rem;
  padding: .25rem 0;
  &:hover
    color: theme-color;
    cursor: pointer;

.favorites-wrapper
  font-size: .9rem;

.votes-total, .favorite-trigger
  display: inline-block;

.votes-total
  font-size: .9rem;

.favorite-trigger
  display: none;
  margin-left: .5rem;
  &[data-favorite='true']
    color: gold;
  &:hover
    color: gold;
    cursor: pointer;


.pokemon-data
  align-items: center;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  margin: .25rem;

.pokemon-data-header
  background: rgba(white, 0.7);
  border-radius: 4px;
  padding: .25rem;
  position: relative;
  text-align: center;
  z-index: 1;

.pokemon-image-container
  align-items: center;
  display: flex;
  height: 85px;
  justify-content: center;
  flex: 1;
  width: 40px;

.pokemon-image-container img
  margin: 0 auto;

.more
  border: 1px solid near-white;
  background: white;
  border-radius: 4px;
  cursor: pointer;
  font-size: .8rem;
  padding: .25rem;
  transition: 300ms all;
  &:hover
    border: 1px solid darken(near-white, 20%);
    transition: 300ms all;

.nickname-data
  align-self: flex-start;
  flex: 1.5;
  font-size: .85rem;
  padding: .5rem;

.nickname-tags
  font-size: .9rem;
  span
    color: grey;
    padding: 0 .25rem;
